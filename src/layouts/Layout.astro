---
import Link from "../components/Link.astro";
import { SEO, type Props as SEOProps } from "astro-seo";

import '../styles/index.css';

interface Props {
	seo?: SEOProps;
}

const { seo } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<SEO 
			{...seo}
			title={seo?.title ?? "Angel López"}
			description={seo?.description ?? "Angel's personal website"}
		/>
	</head>
	<body class="w-full max-w-3xl mx-auto min-h-screen flex flex-col">
		<div class="flex justify-between items-center py-4">
			<header>
				<a href="/" class="font-bold text-2xl hover:text-blue-500"
					>Egghead ❤️ Astro</a
				>
			</header>
			<nav>
				<ul class="flex gap-4">
					<li><Link href="/">Home</Link></li>
					<li><Link href="/about">About</Link></li>
					<li><Link href="/blog/1">Blog</Link></li>
					<li><Link href="/feed.xml">RSS</Link></li>
					<li>
						<Link href="https://github.com/steeldragon8" isExternal>
							GitHub
						</Link>
					</li>
				</ul>
			</nav>
		</div>
		<main class="flex-1">
			<slot />
		</main>
		<footer class="w-full mx-auto text-center py-4">
			<span>© {new Date().getFullYear()} Angel Lopez.</span>
		</footer>
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#da62c4 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		/* background: white; */
		background-color: #f6f6f6;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
